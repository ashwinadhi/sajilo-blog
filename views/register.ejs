<%- include('partials/header') %>

<body class="text-center">
  <h3 class="h3_signup circle"><br>HAVING A PROBLEM? <br>FEEL FREE TO CONTACT</h3>
<img src="images/blog_22.jpg" class="images_signup" alt="Blog_photo">

<main class="form-signin">
<form action="/register" method="POST">
  <img class="mb-4" src="images/blog_22.jpg" alt="Company-Logo" width="240" height="70">
  <h1 class="h3 mb-3 fw-normal">Welcome to Sajilo-Blog </h1>

  <div class="form-floating">
    <input type="text" name="firstname" class="form-control top" id="floatingInput" placeholder="First Name" required autofocus>
    <label for="floatingInput">First Name</label>
  </div>
  <div class="form-floating">
    <input type="text" name="lastname" class="form-control middle" id="floatingInput" placeholder="Last-Name">
    <label for="floatingPassword">Last Name</label>
  </div>
  <div class="form-floating">
    <input type="email" name="mail" class="form-control buttom" id="floatingInput" placeholder="Email">
    <label for="floatingPassword">Email</label>
  </div>
  <div class="form-floating">
    <input type="password" name="password" class="form-control buttom" id="floatingPassword" placeholder="Password">
    <label for="floatingPassword">Password</label>
  </div>

  <div class="checkbox mb-3">
    <label>
      <input type="checkbox" value="remember-me"> I AM NOT A ROBOT.
    </label>
  </div>

  <button class="w-100 btn btn-lg btn-success" type="submit">Sign in</button>
  <div>
    <h4>Or</h4>
    <a class="w-100 btn btn-lg btn-primary"><i class="fab fa-facebook"><h6>Continue with Facebook</h6></i></a>
    <a class="w-100 btn btn-lg btn-danger"><i class="fab fa-google"><h6>Continue with Google</h6></i></a>
  </div>
</form>

</main>

<%- include('partials/footer') %>
