<%- include('partials/header') %>

<body class="text-center">
  <h3 class="h3_login circle mb-3"><br>HAVING A PROBLEM? <br>FEEL FREE TO CONTACT</h3>
<img src="images/blog_22.jpg" class="images_login mb-3" alt="Blog_photo">

<main class="form-signin">
<form action="/login" method="POST">
  <img class="mb-4" src="images/blog_22.jpg" alt="Company-Logo" width="300" height="200">
  <h1 class="h3 mb-3 fw-normal">Welcome to Sajilo-Blog </h1>
  <div class="form-group">
    <label for="email">Email</label>
    <input type="email" class="form-control" name="username">
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <input type="password" class="form-control" name="password">
  </div>

  <div class="checkbox mb-3">
    <label>
      <input type="checkbox" value="remember-me"> I AM NOT A ROBOT.
    </label>
  </div>

  <button class="w-100 btn btn-lg btn-success" type="submit">Sign in</button>

</form>

</main>

